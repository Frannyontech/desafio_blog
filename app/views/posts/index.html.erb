<nav class="navbar navbar-light bg-dark">
  <a class="navbar-brand text-light">Francisca's Blog</a>
  <form class="form-inline">
    <input class="form-control mr-sm-2" type="search" name="title" placeholder="Enter title" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</nav>

<h1 class="display-3 text-center">Posts</h1>


<table class="table table-bordered ">

        <tr class="text-center bg-info text-white">
            <th>Title</th>
            <th>Content</th>
            <th>Date</th>
            <th>Image</th>
        </tr>

        <% @posts.reverse.each do |post| %>
                <tr class="text-center">
                    <th class="align-middle"><%= post.title %></th>
                    <td class="align-middle"><%= post.content %></td>
                    <td class="align-middle"><%= post.created_at %></td>
                    <td class="align-middle"><img src="<%=post.image_url%>" alt="" style="width: 75px; height: 60px;"></td>
                </tr>
        <%end%>

</table>
<form method='get' action='/posts/create' id='create_posts'>

    <div class="form-group">
        <label for="title">Title:</label>
        <input type="title" class="form-control" id="title" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label for="image_url">Image:</label>
        <input name="image_url" type="image_url" class="form-control" placeholder="Enter Url">
    </div>
    <div class="form-group">
        <label for="content">Post:</label>
        <textarea name="content" class="form-control" placeholder="Enter comment"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>